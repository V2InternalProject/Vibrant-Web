                        $("#deleteAllFileHistoryConfirm").dialog('close');
                        errorOccured();
                    }
                },
                Error: function () {
                    $("#loading").dialog("close");
                    $("#loading").dialog("destroy");
                    errorOccured();
                }
            });
        }
