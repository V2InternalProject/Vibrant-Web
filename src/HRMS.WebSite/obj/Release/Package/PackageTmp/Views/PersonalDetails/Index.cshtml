@model HRMS.Models.PersonalDetailsViewModel
@using HRMS.DAL
@{
    ViewBag.Title = "Personal Details";
    Layout = "~/Views/Shared/_PersonalLayout.cshtml";
}
<link href="../../Content/New%20Design/employee.css" rel="stylesheet" type="text/css" />
<script src="../../Scripts/New%20Design/common.js" type="text/javascript"></script>
@{string[] emplRoles = Roles.GetRolesForUser(Membership.GetUser().UserName);
  CommonMethodsDAL commonmethodDAL = new CommonMethodsDAL();
  var user = commonmethodDAL.GetMaxRoleForUser(emplRoles);
  if (user != null)
  {
      if ((user == HRMS.Models.UserRoles.HRAdmin) || (user == HRMS.Models.UserRoles.HRExecutive) || (user == HRMS.Models.UserRoles.RMG))
      {
    <script type="text/javascript">
        $(".Title").show();
    </script>
      }
      else
      {
    <script type="text/javascript">
        $(document).ready(function () {
            //For Browse Button
            $("#blogpic").bind("change", function (event) {
                $("#FileBlogPicField").val($(this).val());
            });

        });
        $(".Title").hide();
    </script>
      }
  }
  else
  {
    <script type="text/javascript">
        $(".Title").hide();
    </script>
  }
}
