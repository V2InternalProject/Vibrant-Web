@model HRMS.Models.ForgotPasswordModel
@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    body
    {
        border-top: 10px solid #53b3da;
    }
    #body
    {
        background-color: #f2f2f2;
    }
    header
    {
        background-color: #ffffff;
        height: 20px;
    }
    .logo
    {
        background-color: #ffffff;
        height: 100px;
        text-align: center;
    }
    .logo img
    {
        margin: 0px auto;
        width: 240px;
    }
    .main-content
    {
        padding: 0px;
    }
    .content-wrapper
    {
        max-width: 100% !important;
    }
    .loginContainer
    {
        width: 500px;
        background: #ffffff;
        margin: 50px auto;
        border-radius: 15px;
        -webkit-border-radius: 15px; /* Safari */
        -moz-border-radius: 15px; /* firefox */
        border: 1px solid #53b3da;
        padding: 5px 25px;
        text-align: center;
    }
    h4
    {
        font-size: 30px;
        color: #53b3da;
        margin-top: 18px;
        margin-bottom: 20px;
    }

    input[type="submit"], input[type="button"], button
    {
        border: 2px solid #41a5ce;
        border-radius: 5px;
        -webkit-border-radius: 5px; /* Safari */
        -moz-border-radius: 5px; /* firefox */
        background-color: #51b2d9;
        background: -webkit-gradient(linear, left top, left bottom, from(#7ac1e7), to(#51b2d9));
        background: -moz-linear-gradient(top,  #7ac1e7,  #51b2d9);
        filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#7ac1e7',     endColorstr='#51b2d9');
        color: #ffffff;
        font-weight: bold;
    }
    .loginlable
    {
        width: 185px;
        text-align: right;
        margin-right: 20px;
    }
    .floatR
    {
        float: right;
    }
    .floatL
    {
        float: left;
    }
    .logininput
    {
        width: 220px;
        text-align: left;
    }
    .logininput input
    {
        width: 205px;
    }
    .fieldsetbox
    {
        width: 425px;
        margin: 0px auto;
    }
    a:link, a:visited
    {
        color: #333;
    }
    a:hover
    {
        color: #0c7dad;
        background: none;
    }
    .validation-summary-errors, .field-validation-error
    {
        color: #d61212;
        font-weight: normal;
    }
    input.input-validation-error
    {
        border: 1px solid #d61212;
    }
</style>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("../../Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
<div class="logo">
    <img src="../../Images/v2logo.png" /></div>
<div class="loginContainer">
    <h4>
        Forgot Password</h4>
    <br />
    @using (Html.BeginForm())
    { <fieldset>
        <fieldset class="fieldsetbox">
            <div class="loginlable floatL">

                @Html.Label("Enter EmployeeID")</div>
            <div class="logininput floatL">
                @Html.TextBoxFor(m => m.EmployeeId)
                @Html.ValidationMessageFor(m => m.EmployeeId)
            </div>
        </fieldset>

            <p>
                <input type="submit" value="Reset Password" />
            </p>
        </fieldset>
    }
</div>