@model HRMS.Models.VisaViewModel
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("../../Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
<script src="../../Scripts/Travel/_TravelVisaDetails.js" type="text/javascript"></script>
@using (@Html.BeginForm("SaveTravelVisaUploadsDetailsInfo", "Travel", FormMethod.Post, new { @id = "addTravelVisaDetails" }))
{
    @Html.ValidationSummary(true)
    <div class="mrgnT25">
        @Html.HiddenFor(x => x.ID)
        @Html.HiddenFor(x => x.VisaTravelID, new { @id = "VisaTravelIDnew" })
        @Html.HiddenFor(model => model.VisaTravelID, new { @id = "VisaTravelID" })
        @Html.HiddenFor(x => x.EmployeeId)
        @Html.HiddenFor(x => x.isAdminRecord)
        @Html.HiddenFor(x => x.StageID)
        
        <div class="formrow clearfix">
            <div class="LabelDiv">
                 @Html.Label("Upload Visa Copy:")@*<span id="travelVisaAsterisk" class="mandatory">*</span>*@
            </div>
            <div class="InputDiv positionR">
                     <input type="file" name="doc" id="adminVisa" size="24" class="FileUploadBtn" />
                <div class="BrowserVisible">
                    <input type="button" class="BtnForCustomUpload" value="Browse.." /><input type="text"
                        id="FalseVisaFileUploadTxt" class="FileField" value="No files selected" />
                </div>
                <p>
                    <span id="VisaUploadErrorAdmin" class="field-validation-error"></span>
                   
                </p>
            </div>
        </div>
    </div>
     <div class="mrgnB18 floatR">
            <input id="saveTravelVisadetails" type="submit" value="Save" class="ButtonGray" />
            <input id="cancel" type="button" value="Reset" onclick="emptyDialogTravelVisaDetails()"
                class="ButtonGray " />
        </div>      	
}

<div id="DateValidatedialog" style="display: none;">
    <p>
        From date should be Less than to date
    </p>
</div>
<div id="AdminVisaSuccess" title="Save Passport Details" style="display: none">
    <center>
    File selected successfully.
    </center>
</div>
<div id="errorUploadAdminVisaDialog" style="display: none">
    <center>
    Some error occurred while uploading document.Please try again.
    </center>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#todateVisaDetails').datepicker({ dateFormat: "mm/dd/yy", changeMonth: true, changeYear: true, yearRange: "-60:+10", showOn: "both", buttonImage: "../../Content/themes/base/images/calendar.gif", buttonImageOnly: true });

        $("#adminVisa").change(function () {
            if ($('#adminVisa').val() != "" && $('#adminVisa').val() != "null") {
                $("#VisaUploadErrorAdmin").text("");
                $("#FalseVisaFileUploadTxt").val($(this).val());
            }
        });
    });
</script>
