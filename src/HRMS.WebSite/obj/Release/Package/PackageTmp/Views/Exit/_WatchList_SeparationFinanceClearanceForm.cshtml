<script type="text/javascript">
	$.ajaxSetup({
		// Disable caching of AJAX responses
		cache: false
	});

	$(document).ready(function () {
	    $("#dialog1_Finance").show();
	    var finance = '@ViewBag.Finance';
	    $("#Respondent").val(finance);
	    $("#dialog1_IT").hide();
	    $("#dialog1_HR").hide();
	    $("#dialog1_ADMIN").hide();
	    $("#dialog1_Project").hide();
	    $("#dialog1_Asset").hide();

	    $("#Respondent").change(function () {
	        if ($('#Respondent').val() == '@ViewBag.IT') {
	            $("#dialog1_Finance").hide();
	            $("#dialog1_IT").show();
	            $("#dialog1_HR").hide();
	            $("#dialog1_ADMIN").hide();
	            $("#dialog1_Project").hide();
	            $("#dialog1_Asset").hide();
	        }
	        else if ($('#Respondent').val() == '@ViewBag.HR') {
	            $("#roleHR").hide();
	            $("#buttonsHR").hide();
	            $("#dialog1_IT").hide();
	            $("#dialog1_Finance").hide();
	            $("#dialog1_HR").show();
	            $("#dialog1_ADMIN").hide();
	            $("#dialog1_Project").hide();
	            $("#dialog1_Asset").hide();
	        }
	        else if ($('#Respondent').val() == '@ViewBag.Finance') {
	            $("#dialog1_HR").hide();
	            $("#dialog1_IT").hide();
	            $("#dialog1_Finance").show();
	            $("#dialog1_ADMIN").hide();
	            $("#dialog1_Project").hide();
	            $("#dialog1_Asset").hide();
	        }
	        else if ($('#Respondent').val() == '@ViewBag.Admin') {
	            $("#dialog1_ADMIN").show();
	            $("#dialog1_IT").hide();
	            $("#dialog1_HR").hide();
	            $("#dialog1_Finance").hide();
	            $("#dialog1_Project").hide();
	            $("#dialog1_Asset").hide();
	        }
	        else if ($('#Respondent').val() == '@ViewBag.Project') {
	            $("#dialog1_Finance").hide();
	            $("#dialog1_IT").hide();
	            $("#dialog1_HR").hide();
	            $("#dialog1_ADMIN").hide();
	            $("#dialog1_Project").show();
	            $("#dialog1_Asset").hide();
	        }
	        else if ($('#Respondent').val() == '@ViewBag.Asset') {
	            $("#dialog1_Finance").hide();
	            $("#dialog1_IT").hide();
	            $("#dialog1_HR").hide();
	            $("#dialog1_ADMIN").hide();
	            $("#dialog1_Project").hide();
	            $("#dialog1_Asset").show();
	        }
	    });

//	    $(function () {
//	        $('select').selectbox();
//	        $('.sbOptions a').hover(function () {
//	            $(this).parent().toggleClass("hoveroption");
//	        });
//	    });
	});
</script>
