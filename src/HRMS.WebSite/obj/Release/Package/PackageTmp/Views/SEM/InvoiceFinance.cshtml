<script type="text/javascript">
     $(document).ready(function () {
        $("#jqFinanceTable").jqGrid({
            // Ajax related configurations
            url: '@Url.Action("TravelEmergencyContactLoadGrid", "Travel")',
            postData: { travelId: 12 },//hardcoded for testing
            datatype: "json",
            mtype: "POST",
            // Specify the column names
            colNames: ["Project", "Sales Period", "IR ID", "Invoice Sent","Amount","Number of Installments","Expected Collection Date 1","Actual Collection Date 1","Amount Paid 1","Expected Collection Date 2","Actual Collection Date 2","Amont Paid 2","Bill","Comments"],            
            // Configure the columns
            colModel: [
                { name: "Project", index: "Project", align: "left", width: 50},
                { name: "SalesPeriod", index: "SalesPeriod", align: "left", width: 50 },
                { name: "IRID", index: "IRID", align: "left", width: 50 },
                { name: "InvoiceSent", index: "InvoiceSent", align: "left", width: 50 },  
                { name: "Amount", index: "Amount", align: "left", width: 50},
                { name: "Installments", index: "Installments", align: "left", width: 50 },
                { name: "Expected1", index: "Expected1", align: "left", width: 50 },
                { name: "Actual1", index: "Actual1", align: "left", width: 50 },       
                { name: "Amount1", index: "Amount1", align: "left", width: 50},
                { name: "Expected2", index: "Expected2", align: "left", width: 50 },
                { name: "Actual2", index: "Actual2", align: "left", width: 50 },
                { name: "Amount2", index: "Amount2", align: "left", width: 50 },       
                { name: "Bill", index: "Bill", align: "left", width: 50},
                { name: "Comments", index: "Comments", align: "left", width: 50 },     
            ],
            // Grid total width and height
            width: 700,
            // Paging
            toppager: true,
            jsonReader: { repeatitems: false },
            pager: $("#jqFinanceTablePager"),
            rowNum: 5,
            rowList: [5, 10, 20],
            viewrecords: true, // Specify if "total number of records" is displayed
            height: 'auto',
            autowidth: false,
            // Default sorting
            sortname: "",
            sortorder: "asc",
            // Grid caption
            caption: "PIR Status Report",
              gridComplete: function () {
            },
            onCellSelect: function(rowid, iCol) {
			},
        }).navGrid("#jqFinanceTablePager",
            { search: false, refresh: false, add: false, edit: false, del: false },
            {}, // settings for edit
            {},
            {}
        );
     
     
     });
</script>