@model HRMS.Models.EmployeeMailTemplate
<script type="text/javascript">
    $(document).ready(function () {
        if ('@Model.Bcc' != null && '@Model.Bcc' != '') {
            $("#BccID").show();
        }
    });
</script>
@using (Html.BeginForm("", "", FormMethod.Post, new { @id = "MailDetails" }))
{
    @Html.ValidationSummary(true)
    <div class="MailPopUp">
        <div class="formrow clearfix">
            <div class="LabelDiv">
                @Html.Label("From")<span class="mandatory">*</span>
            </div>
            <div class="InputDiv">
                @Html.TextBoxFor(model => model.From, new { @disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.From)
                @Html.HiddenFor(model => model.From, new { id = "hdFrom" })
            </div>
        </div>
        <div class="formrow clearfix">
            <div class="LabelDiv">
                @Html.Label("To")<span class="mandatory">*</span>
            </div>
            <div class="InputDiv">
                @Html.TextBoxFor(model => model.To)
                @Html.ValidationMessageFor(model => model.To)
                @Html.HiddenFor(model => model.To, new { id = "hdTo" })
                <span id="ToErrorMessage" style="display: none; color: red">
                    Please enter proper Email
                    ID
                </span>
            </div>
        </div>
        <div class="formrow clearfix">
            <div class="LabelDiv">
                @Html.Label("Cc")
            </div>
            <div class="InputDiv">
                <span class="top-txtarea">@Html.TextAreaFor(model => model.Cc)</span>
                @Html.ValidationMessageFor(model => model.Cc)
                @Html.HiddenFor(model => model.Cc, new { id = "hdCc" })
                <span id="CCErrorMessage" style="display: none; color: red">
                    Please enter proper Email
                    IDs
                </span>
            </div>
        </div>
        <div class="formrow clearfix" id="BccID" style="display: none">
            <div class="LabelDiv">
                @Html.Label("Bcc")
            </div>
            <div class="InputDiv">
                <span class="top-txtarea">@Html.TextAreaFor(model => model.Bcc)</span>
                @Html.ValidationMessageFor(model => model.Bcc)
                @Html.HiddenFor(model => model.Bcc, new { id = "hdBcc" })
                <span id="CCErrorMessage" style="display: none; color: red">
                    Please enter proper Email
                    IDs
                </span>
            </div>
        </div>
        <div class="formrow clearfix">
            <div class="LabelDiv">
                @Html.Label("Subject")
            </div>
            <div class="InputDiv">
                @Html.TextBoxFor(model => model.Subject, null, new { @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.Subject)
                @Html.HiddenFor(model => model.Subject, new { @id = "hdSubject" })
            </div>
        </div>
        <div class="formrow clearfix">
            <div class="LabelDiv">
                @Html.Label("Note")
            </div>
            <div class="InputDiv">
                <p>
                    The valid separators for the Email IDs are space(" "), comma(",") and semi-colon(";")."
                </p>
                @*@Html.Label("The valid separators for the Email IDs are space(" + " " + "), comma(" + "," + ") and semi-colon(" + ";" + ").")*@
            </div>
        </div>
        <div class="formrow clearfix">
            <div class="LabelDiv">
                @Html.Label("Message")
            </div>
            <div class="InputDiv">
                @Html.TextAreaFor(model => model.Message)
                @Html.ValidationMessageFor(model => model.Message)
                @Html.HiddenFor(model => model.Message, new { @id = "txtMessage" })
            </div>
        </div>
    </div>
    <div class="clear popup_button ">
        <div class="ButtonContainer1">
            <input id="sendConfigAppraisalMail" type="button" value="Send" class="ButtonGray" />
        </div>
    </div>
}