@model HRMS.Models.EligibilityCriteriaModel
@{
    ViewBag.Title = "Successfully Initiated Employees";
}
<script src="../../Scripts/jQuery.print.js" type="text/javascript"></script>
<div>
    @using (Html.BeginForm("ExportIniEmployeeToExcel", "ConfigurationAppraisal"))
    {
        <div id="AllEmployeeDiv">
            <div class="mrgnT10">
                <input class="button" type="button" id="printSuccessEmp" value="Print" onclick="printDiv('printThisArea')" />
                <input class="button" type="submit" id="exportSuccessExcel" value="Export to Excel" />
                <input class="button" type="button" id="okSuccessEmp" value="OK" />
            </div>
            <br />

            <div id="printThisArea">
                <table cellpadding="0" cellspacing="0" border="0" width="100%" id="tbl_allSuccessEmployees"
                    class="TablesBlueHeaders">
                    <thead>
                        <tr class="bluebgtable1">
                            <td width="10%">
                                Employee Code
                            </td>
                            <td class="bluebgtable1" width="15%">
                                Employee Name
                            </td>
                            <td class="bluebgtable1" width="15%">
                                Delivery Team
                            </td>
                            <td class="bluebgtable1" width="15%">
                                Designation
                            </td>
                            <td class="bluebgtable1" width="15%">
                               Probation Review Date
                            </td>
                        </tr>
                    </thead>
                    <div>
                        @for (var i = 0; i < Model.allSuccessEmployeeList.Count; i++)
                        {
                            <tr @*id="@item.EmployeeID"*@ class="highlightRed">
                                <td align="center">
                                    @* @Html.DisplayFor(modelItem => item.EmployeeCode, new { @readonly = "readonly" }) *@
                                    @Html.TextBoxFor(x => Model.allSuccessEmployeeList[i].EmployeeCode, new { style = "display: none;" })
                                    @Html.DisplayFor(x => Model.allSuccessEmployeeList[i].EmployeeCode)
                                </td>
                                <td>
                                    @* @Html.DisplayFor(modelItem => item.EmployeeName, new { @readonly = "readonly" })*@
                                    @Html.TextBoxFor(x => Model.allSuccessEmployeeList[i].EmployeeName, new { style = "display: none;" })
                                    @Html.DisplayFor(x => Model.allSuccessEmployeeList[i].EmployeeName)
                                </td>
                                <td>
                                    @*@Html.DisplayFor(modelItem => item.DeliveryTeam, new { @readonly = "readonly" })*@
                                    @Html.TextBoxFor(x => Model.allSuccessEmployeeList[i].DeliveryTeam, new { style = "display: none;" })
                                    @Html.DisplayFor(x => Model.allSuccessEmployeeList[i].DeliveryTeam)
                                </td>
                                <td>
                                    @*@Html.DisplayFor(modelItem => item.Designation, new { @readonly = "readonly" })*@
                                    @Html.TextBoxFor(x => Model.allSuccessEmployeeList[i].Designation, new { style = "display: none;" })
                                    @Html.DisplayFor(x => Model.allSuccessEmployeeList[i].Designation)
                                </td>
                                <td>
                                    @* @Html.DisplayFor(modelItem => item.ConfirmationDate, new { @readonly = "readonly" })*@
                                    @Html.TextBoxFor(x => Model.allSuccessEmployeeList[i].ProbationReviewDate, new { style = "display: none;" })
                                    @Html.DisplayFor(x => Model.allSuccessEmployeeList[i].ProbationReviewDate)
                                </td>
                            </tr>
                        }
                    </div>
                </table>
            </div>
            <br />
        </div>
    }
</div>
<script type="text/javascript">
    function printDiv(printThisArea) {
        $('#tbl_allSuccessEmployees').parent().find('tr').css('border', '1px solid #1F8AB8').find('td').css('border', '1px solid #1F8AB8');
        $('#' + printThisArea).print();
        return (false);
    }
</script>