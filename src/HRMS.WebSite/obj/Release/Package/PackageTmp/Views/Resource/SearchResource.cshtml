                { name: "EmploymentStatus", index: "EmploymentStatus", align: "left", width: 60 },
                { name: "StartDate", index: "StartDate", align: "left", width: 50 },
                { name: "EndDate", index: "EndDate", align: "left", width: 50 },
                { name: "Allocated", index: "Allocated", align: "left", width: 35 },
                { name: "Comments", index: "Comments", align: "left", width: 90 },
                { name: "Action", index: "Action", align: "left", width: 30 },
