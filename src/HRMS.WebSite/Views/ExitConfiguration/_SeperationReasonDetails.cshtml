<script type="text/javascript">
    $.ajaxSetup({
        // Disable caching of AJAX responses
        cache: false
    });
    $("#back_Reasons").click(function () {
        window.location.href = '@Url.Action("Index", "ExitConfiguration")';
//        parent.history.back();
//        return false;
    });

    $("#btnSelectAll").click(function () {
        $(".case").attr("checked", "checked");
    });
    $("#btnDeselectAll").click(function () {
        $(".case").removeAttr("checked");
    });
    function Add() {
        window.location.href = '@Url.Action("ConfigureEditReason", "ExitConfiguration")?reasonId=' + null;
    }

    function Delete() {
        var collection = [];
        $.each($(".case:checked"), function (i, val) {
            collection.push($(val).attr("data"));
        });
        if (collection == "") {
            $("#NoItemSelectedtodeleteReason").dialog({
                closeOnEscape: false,
                resizable: false,
                height: 'auto',
                width: 300,
                modal: true,
                dialogClass: 'noclose',
                buttons: {
                    OK: function () {
                        $(this).dialog("close");
                    }
                }
            });
        }
        else {
            $("#DeleteConfirmation").dialog({
                closeOnEscape: false,
                resizable: false,
                height: 'auto',
                width: 300,
                modal: true,
                dialogClass: 'noclose',
                buttons: {
                    Ok: function () {
                        $("#loading").dialog(
                        {
                            closeOnEscape: false,
                            resizable: false,
                            height: 140,
                            width: 300,
                            modal: true,
                            dialogClass: "noclose"
                        });
                        $("#DeleteConfirmation").dialog('close');
                        DeleteCall();
                    },
                    Close: function () {
                        $(this).dialog("close");
                    }
                }
            });
        }
        function DeleteCall() {
            $.ajax({
                url: '@Url.Action("DeleteReason", "ExitConfiguration")',
                data: JSON.stringify(collection),
                type: 'post',
                datatype: "json",
                contentType: 'application/json; charset=utf-8',
                success: function (results) {
                    $("#loading").dialog("close");
                    $("#loading").dialog("destroy");
                    if (results.status) {
                        $("#DeleteSuccess").dialog({
                            closeOnEscape: false,
                            resizable: false,
                            height: 'auto',
                            width: 300,
                            modal: true,
                            dialogClass: 'noclose',
                            buttons: {
                                Ok: function () {
                                    $('.case').attr('checked', false);
                                    $(this).dialog("close");
                                    location.reload();
                                }
                            }
                        });
                    }
                    else {
                        $("#ErrorindeleteReason").dialog({
                            closeOnEscape: false,
                            resizable: false,
                            height: 'auto',
                            width: 300,
                            modal: true,
                            dialogClass: 'noclose',
                            buttons: {
                                Ok: function () {
                                    $(this).dialog("close");
                                }
                            }
                        });
                    }
                },
                Error: function () {
                    $("#loading").dialog("close");
                    $("#loading").dialog("destroy");
                    $("#ErrorindeleteReason").dialog({
                        closeOnEscape: false,
                        resizable: false,
                        height: 'auto',
                        width: 300,
                        modal: true,
                        dialogClass: 'noclose',
                        buttons: {
                            Ok: function () {
                                $(this).dialog("close");
                            }
                        }
                    });
                }
            });
        }
    }
</script>

