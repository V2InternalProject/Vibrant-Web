@model HRMS.Models.ExitProcessViewModel
@{
	ViewBag.Title = "Menu";
	Layout = "~/Views/Shared/_PersonalLayout.cshtml";
}

<script type="text/javascript">
	$(".Title").hide();
</script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("../../Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
<script type="text/javascript">
	$(document).ready(function () {

		if ('@ViewBag.IsSeparationLinkVisible' == 'False') {

			$("#lnkSeparationForm").hide();
		}

	});
</script>
<div class="blueBorder">
<h2 class="mrgnT15 title-bgcolor">
	Separation Process</h2>
<div class="clearfix">
	<fieldset class="blueBorder">
			<ul>
				<li id="lnkSeparationForm">@Html.ActionLink("Fill My Separation Form", "SeparationForm", "Exit")</li>

				<li>@Html.ActionLink("Employee Separation Approvals", "EmpSeparationApprovals", "Exit")
				@{

					if (@ViewBag.InboxCount > 0)
					{
				<span class="count-red">(@ViewBag.InboxCount: Action Items)</span>
					}
				}
				</li>

                @if (Model.UserRole == "HR Admin")
				{
				<li>@Html.ActionLink("Employee Separation - Termination", "EmpSeparationTermination", "Exit")</li>
				}
                    </ul>
	</fieldset>
</div>
</div>