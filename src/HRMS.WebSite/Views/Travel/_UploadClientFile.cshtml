@model HRMS.Models.ClientViewModel
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("../../Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
<script src="../../Scripts/Travel/ClientDetails.js" type="text/javascript"></script>
@using (Html.BeginForm("UploadClientDetails", "Travel", FormMethod.Post, new { @id = "addTravelsClientFileDetails" }))
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(Model => Model.ClientId, new { @id = "ClientId" });
    @Html.HiddenFor(Model => Model.selectedLocationID, new { @id = "selectedLocationID" });
    @Html.HiddenFor(Model => Model.TravelId, new { @id = "TravelId" });                                                                                                                                    
    
   <div class="formcol clearfix" id="divClientInviteLetter">
            <div class="editor-label labelwidth floatL">
                @Html.Label("Client Invite Letter")
            </div>
            <div class="editor-field fieldwidth floatL">
                <input type="file" name="doc" id="clientInviteLetter1" size="24" data-val-required="please select a file to Upload" />
                <p>
                    <span id="ClientLetterUploadError1"></span>
                    @Html.HiddenFor(model => model.ClientInviteLetterName, new { id = "clientLetter" })
                </p>
            </div>
        </div>
    <div id="ClientInviteLetterUploadError" title="Error" style="display: none">
        <p>
            Please check the file you are uploading
        </p>
        <p>
            '.exe' file is not allowed to upload
        </p>
    </div>  
    <div class="clear popup_button ">
        <div class="floatR">
            <input id="saveClientFileDetails" type="submit" value="Save" class="button" />
        </div>
    </div> 
}
<script type="text/javascript">
    $('#saveClientFileDetails').off('click').on('click', function () {
        SaveClientDetails();
    });
</script>
