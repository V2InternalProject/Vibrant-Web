@model HRMS.Models.TimesheetViewModel
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_PersonalLayout.cshtml";
}
@section HeaderLinks{
    @Html.Partial("_HeaderLinks", Model.SearchedUserDetails)
}
<div class="blueBorderNew clearfix NoTitleGridsContainer SemContainer">
    <h2 class="title-bgcolor">
        My Timesheets</h2>
    <div class="clearfix blueBorderTop">
        <div class="colOneThird clearfix">
            <div class="formcol clearfix">
                <div class="editor-label labelwidth floatL">
                    @Html.Label("Status:")
                </div>
                <div class="editor-field fieldwidth floatL">
                    <select>
                        <option>abc</option>
                        <option>abc</option>
                        <option>abc</option>
                        <option>abc</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="tablestyle3">
        <table id="jqTimesheetViewTable">
        </table>
    </div>
    <div id="jqTimesheetViewTablePager">
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {

    $("#jqTimesheetViewTable").jqGrid({
            // Ajax related configurations
            url: '@Url.Action("TravelEmergencyContactLoadGrid", "Travel")',
            postData: { travelId: 12 },//hardcoded for testing
            datatype: "json",
            mtype: "POST",
            // Specify the column names
            colNames: ["Generation Date", "From Date", "To Date", "Actual Work (Hrs)","Status",  "Delete"],            
            // Configure the columns
            colModel: [
                { name: "Generation", index: "Generation", align: "center", width: 150},
                { name: "From", index: "From", align: "center", width: 150 },
                { name: "To", index: "To", align: "center", width: 150 },
                { name: "ActualWork", index: "ActualWork", align: "center", width: 100 },
                { name: "Status", index: "Status", align: "center", width: 130 },
                { name: "Delete", index: "Delete", align: "center", width: 20 },
               
               
               
               
            ],
            // Grid total width and height
            width: 700,
            // Paging
            toppager: false,
            jsonReader: { repeatitems: false },
            pager: $("#jqTimesheetViewTablePager"),
            rowNum: 20,
            rowList: [],
            viewrecords: true, // Specify if "total number of records" is displayed
            height: 'auto',
            autowidth: false,
            // Default sorting
            sortname: "",
            sortorder: "asc",
            // Grid caption
            //caption: "Excel Upload",
              gridComplete: function () {
            },
            onCellSelect: function(rowid, iCol) {
			},
        }).navGrid("#jqTimesheetViewTablePager",
            { search: false, refresh: false, add: false, edit: false, del: false },
            {}, // settings for edit
            {},
            {}
        );
       
    });
    
</script>